{
  "mcpServers": {
    "postgres-prod-readonly": {
      "command": "uvx",
      "args": ["postgres-mcp", "--access-mode=restricted"],
      "env": {
        "DATABASE_URI": "${MCP_DATABASE_URL}"
      }
    },
    "postgres-dev": {
      "command": "uvx",
      "args": ["postgres-mcp", "--access-mode=restricted"],
      "env": {
        "DATABASE_URI": "postgresql://postgres:postgres@localhost:6969/postgres"
      }
    },
    "sentry": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@sentry/mcp-server@latest",
        "--access-token=${MCP_SENTRY_ACCESS_TOKEN}",
        "--host=danthareja.sentry.io"
      ]
    }
  }
}
