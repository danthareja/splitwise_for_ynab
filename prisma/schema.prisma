generator client {
  provider   = "prisma-client"
  output     = "./generated"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  apiKey        String?         @unique
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]

  splitwiseSettings SplitwiseSettings?
  ynabSettings      YnabSettings?
  syncHistory       SyncHistory[]
  syncState         SyncState?
  rateLimits        RateLimit[]
  
  // Account status fields
  disabled          Boolean         @default(false)
  disabledAt        DateTime?
  disabledReason    String?
  suggestedFix      String?
  
  // Onboarding fields
  persona            String?        // "solo" | "dual" - changeable anytime
  onboardingStep     Int            @default(0) // 0-4, enables resume on bounce
  onboardingComplete Boolean        @default(false)
  
  // Partner relationship (for dual accounts)
  // If primaryUserId is set, this user is a "secondary" and inherits SplitwiseSettings from primary
  primaryUserId      String?        @unique
  primaryUser        User?          @relation("PrimarySecondary", fields: [primaryUserId], references: [id], onDelete: SetNull)
  secondaryUser      User?          @relation("PrimarySecondary")
  
  // Splitwise user ID (for partner detection when selecting same group)
  splitwiseUserId    String?
  
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model SplitwiseSettings {
  id               String    @id @default(cuid())
  userId           String    @unique
  groupId          String?
  groupName        String?
  currencyCode     String?
  emoji            String?   @default("âœ…")
  lastPartnerSyncAt DateTime?
  defaultSplitRatio  String?  @default("1:1")
  useDescriptionAsPayee Boolean? @default(true)
  customPayeeName  String?

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model YnabSettings {
  id                   String   @id @default(cuid())
  userId               String   @unique
  budgetId             String
  budgetName           String
  splitwiseAccountId   String?
  splitwiseAccountName String?
  manualFlagColor      String   @default("blue")
  syncedFlagColor      String   @default("green")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SyncHistory {
  id           String       @id @default(cuid())
  userId       String
  status       String       @default("success") // success, error, partial
  errorMessage String?
  startedAt    DateTime     @default(now())
  completedAt  DateTime?
  syncedItems  SyncedItem[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SyncedItem {
  id            String   @id @default(cuid())
  externalId    String // Ynab transaction ID or Splitwise expense ID
  type          String // "ynab_transaction" or "splitwise_expense"
  amount        Float
  description   String?
  date          String // ISO date string (YYYY-MM-DD)
  syncHistoryId String
  direction     String // "ynab_to_splitwise" or "splitwise_to_ynab"
  status        String  @default("success") // "success", "error"
  errorMessage  String? // when status is "error"

  syncHistory SyncHistory @relation(fields: [syncHistoryId], references: [id], onDelete: Cascade)
}

model SyncState {
  id                  String    @id @default(cuid())
  userId              String    @unique
  ynabServerKnowledge String? // Stored as string to preserve precision
  splitwiseLastSynced DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RateLimit {
  id          String   @id @default(cuid())
  userId      String
  key         String
  count       Int      @default(0)
  windowStart DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
}

// Partner invite tokens for streamlined secondary user setup
model PartnerInvite {
  id              String    @id @default(cuid())
  token           String    @unique // Short URL-friendly token
  primaryUserId   String
  
  // Cached settings from primary at invite time (shared settings only)
  groupId         String
  groupName       String?
  currencyCode    String
  defaultSplitRatio String  @default("1:1") // Shared between partners
  primaryEmoji    String    // To check for conflicts
  
  // Partner contact info (auto-detected from Splitwise group, can be overridden)
  partnerEmail    String?   // Email to send invite to
  partnerName     String?   // Partner's name from Splitwise
  emailSentAt     DateTime? // When the invite email was sent
  emailReminderCount Int    @default(0) // Number of reminder emails sent
  
  // Status
  status          String    @default("pending") // pending, accepted, expired
  acceptedByUserId String?  // User who accepted (becomes secondary)
  
  expiresAt       DateTime
  createdAt       DateTime  @default(now())
  acceptedAt      DateTime?
}