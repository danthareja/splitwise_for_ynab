# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:6969/dev"

# NextAuth
# from `npx auth secret`
AUTH_SECRET=

# YNAB OAuth
# Go to: https://app.ynab.com/settings
# Click "Developer Settings" > "New Application"
AUTH_YNAB_ID=
AUTH_YNAB_SECRET=

# Splitwise OAuth
# Go to: https://secure.splitwise.com/apps
# Click "Register your application"
AUTH_SPLITWISE_ID=
AUTH_SPLITWISE_SECRET=

# Email (Resend)
RESEND_API_KEY=

# Cron Secret (for scheduled sync)
# `openssl rand -hex 16` works
CRON_SECRET=

# Optional: Sentry
# from `npx @sentry/wizard@latest -i nextjs`
SENTRY_AUTH_TOKEN=

# Optional: Google Site Verification
GOOGLE_SITE_VERIFICATION=

# Optional: Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Rate Limiting
USER_SYNC_MAX_REQUESTS=2
USER_SYNC_WINDOW_SECONDS=3600